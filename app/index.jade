doctype html
html(class="no-js")
  head
    meta(charset="utf-8")
    title Justin Petersen
    meta(name="description", content="Justin Petersen is a Creative Technologist living in San Francisco, California.")
    meta(name="viewport", content="width=device-width")

    link(href="http://fonts.googleapis.com/css?family=Roboto+Condensed:400,700|Vollkorn:400italic,700italic,400,700", rel="stylesheet", type="text/css")

    // build:css css/all.css
    link(rel="stylesheet", type="text/css", href="css/main.css")
    // endbuild

  body

    .navbar.navbar-fixed-top.navbar-inverse
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="#")
            .brand-logo
            .brand-name
              h3 Justin Petersen
              p Creative Technologist
        ul.nav.navbar-nav
          li
            a(href="#") About
          li
            a(href="#") Work
          li
            a(href="#") Skills
          li
            a(href="#") Contact

    .container-fluid.about-container.inner-shadow
      .container
        .row
          .col-xs-5
            .img-profile-container.center
              img.img-circle.img-profile(src="https://media.licdn.com/mpr/mpr/shrink_200_200/p/8/000/1f0/172/0531c92.jpg", alt="Justin Petersen")
          .col-xs-7.about-copy-container
            h2.
              I want to work with smart and creative people to&nbsp;make interactive products that users find entertaining, beautiful and useful.
            p.icons-container
              span.glyphicon.glyphicon-send &nbsp;
              span.glyphicon.glyphicon-user &nbsp;
              img.icon-image(src="images/linkedin-icon.png")

    #total
      .container
        .row
          .col-xs-12.loading-container Loading...

    .container-fluid.footer-container

    // build:js js/all.js
    script(src="components/raphael/raphael.js")
    script(src="components/requirejs/require.js")
    script(src="js/main.js")
    // endbuild

